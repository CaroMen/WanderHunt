extends layout
append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)
block content
  h1= title
  div.body-container
    div.row
      div.left-column
        div.title
          h2 Popular Posts
        .card(class="animate__animated animate__rotateInDownLeft")
          div.popular_group
            each post in popularPosts
              div.recent_post(onclick=`location.href=\"/post/${post.id}\"`)
                img.post_img(src=post.gallery)
                div.author_title
                  p.post_title= post.title
                  p.post_author= post.User.username
        div.title
          h2 Recent Posts
        .card(class="animate__animated animate__rotateInUpLeft")
          div#recent
            each post in recentPosts
              div.recent_post(onclick=`location.href=\"/post/${post.id}\"`)
                img.post_img(src=post.gallery)
                div.author_title
                  p.post_title= post.title
                  p.post_author= post.User.username
      div.right-column
        div.title
          h2 Popular Activities
        .card(class="animate__animated animate__rotateInDownRight")
          div#activity
            each post in activityPosts
              div.recent_post(onclick=`location.href=\"/post/${post.id}\"`)
                div.author_title
                  p.post_activity= post.Activity.name
                  p.post_activity_title= post.title
                img.post_img(src=post.gallery)
        div.title
          h2 Popular States
        .card(class="animate__animated animate__rotateInUpRight")
          div#state
            each post in statePosts
              div.recent_state(onclick=`location.href=\"/post/${post.id}\"`)
                img.post_img(src=post.gallery)
                div.author_title
                  p.post_state= post.State.name
                  p.post_state_title= post.title
