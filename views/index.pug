extends layout


append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")

  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  h1= title
  div.body-container
    div.row
      div.left-column
        div.title
          h2 Popular Posts
        .card
          div.popular_group
            each post in popularPosts
              div.topic_post(onclick=`location.href=\"http://localhost:8080/post/${post.id}\"`)
                img.post_img(src=post.gallery)
                div.author_title
                  p.post_title= post.title
                  p.post_author= post.User.username
        div.title
          h2 Recent Posts
        .card
          div#recent
            each post in recentPosts
              div.topic_post(onclick=`location.href=\"http://localhost:8080/post/${post.id}\"`)
                img.post_img(src=post.gallery)
                div.author_title
                  p.post_title= post.title
                  p.post_author= post.User.username
      div.right-column
        div.title
          h2 Popular Activities
        .card
          div#activity
            each post in activityPosts

              div.recent_post(onclick=`location.href=\"http://localhost:8080/post/${post.id}\"`)
                img.post_img(src=post.gallery)
                div.author_title
                  p.post_title= post.title
                  p.post_author= post.Activity.name
             

        div.title
          h2 Popular States
        .card
          div#state
            each post in statePosts
              div.topic_post(onclick=`location.href=\"http://localhost:8080/post/${post.id}\"`)
                img.post_img(src=post.gallery)
                div.author_title
                  p.post_title= post.title
                  p.post_author= post.State.name
  footer.footer
    div
      h2 Footer
