doctype html
html
  head
      block head
        title="Express Starter App"
        link(rel='stylesheet' href='/stylesheets/layout.css')
  body
    div.navbar
        div.navbar_left
          img.navbar_logo(src="/images/dummylogo.png", alt="")
          input.navbar_search(type="search" placeholder="Discover your next favorite thing...")
        div.navbar_right
          if locals.authenticated
            div.navbar_postBtn
              button.navbar_postBtn_post(href="") Post
            div.navbar_profileImage
              img.navbar_profileImage_pfp(src="/images/dummylogo.png", alt="")
          else
            div.navbar_btn
              button.navbar_btn_login(href="/users/log-in") Log In
            div.navbar_btn
              button.navbar_btn_signup Sign Up
    block content
